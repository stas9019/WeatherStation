<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/date_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="4.20.2000"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/time_text"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/temp_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="20 ะก"
        android:textSize="36dp"
        android:layout_marginEnd="50dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/hum_text"/>
    <TextView
        android:id="@+id/hum_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="50%"
        android:layout_marginEnd="20dp"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="04:20"
        android:id="@+id/time_text"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/date_text"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/temp_icon"
        android:src="@drawable/temperature_64"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/temp_text"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/hum_icon"
        android:src="@drawable/humidity_64"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/hum_text"/>
</RelativeLayout>