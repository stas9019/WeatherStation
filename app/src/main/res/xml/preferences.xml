<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_connection_title"
        android:key="pref_connection_settings">

        <EditTextPreference
            android:key="pref_stationIP"
            android:title="@string/pref_stationIP"
            android:inputType="numberDecimal"
            android:defaultValue="192.168.0.12"
            android:summary="192.168.0.12"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_services"
        android:key="pref_services">

        <CheckBoxPreference
            android:key="pref_service"
            android:title="@string/pref_service"/>


        <EditTextPreference
                android:key="pref_frequency"
                android:title="@string/pref_frequency"
                android:inputType="number"
                android:defaultValue="5"
                android:summary="5 minutes"/>

    </PreferenceCategory>

</PreferenceScreen>